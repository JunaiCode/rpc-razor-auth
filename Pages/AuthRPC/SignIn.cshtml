@page
@model rpc_razor_auth.Pages.AuthRPC.IndexModel
@{
    ViewData["Title"] = "Sign In";
}

<br />
<body>
    <div class="container flex-column justify-content-center align-items-center">
        <h1 align="center" class="text-info">Sign In</h1>
        <div class="border">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="container" style="padding: 30px">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2">
                                <label asp-for="User.UserName"></label>
                            </div>
                            <div class="col-sm-4">
                                <input asp-for="User.UserName" class="form-control" />
                            </div>
                            <span asp-validation-for="User.UserName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2">
                                <label asp-for="User.Password"></label>
                            </div>
                            <div class="col-sm-4">
                                <input type="password" asp-for="User.Password" class="form-control" />
                            </div>
                            <span asp-validation-for="User.Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-4 offset-sm-2">
                                <input type="submit" value="Sign In" class="btn btn-primary form-control" asp-page="Index" />
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>