@page
@model rpc_razor_auth.Pages.AuthRPC.SignUpModel
@{
    ViewData["Title"] = "Sign Up";
}
<br />
<body>
    <div class="container flex-column justify-content-center align-items-center">
        <h1 align="center" class="text-primary">Sign Up</h1>
        <br />
        <div class="border" style="padding: 0.5rem 1rem; margin: 0.2rem 16rem; background-color: #ffffff; border-radius: 10px; filter:drop-shadow(0 0 15px #00000033);">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="container" style="padding: 1.75rem">

                    <div class="form-group">
                        <div class="d-md-flex justify-content-center align-items-center">
                            <div style="min-width: 8.5rem">
                                <label asp-for="User.FirstName">First Name:</label>
                            </div>
                            <div>
                                <input asp-for="User.FirstName" class="form-control" />
                            </div>
                            <span asp-validation-for="User.FirstName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="d-md-flex justify-content-center align-items-center">
                            <div style="min-width: 8.5rem">
                                <label asp-for="User.LastName">Last Name:</label>
                            </div>
                            <div>
                                <input asp-for="User.LastName" class="form-control" />
                            </div>
                            <span asp-validation-for="User.LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="d-md-flex justify-content-center align-items-center">
                            <div style="min-width: 8.5rem">
                                <label asp-for="User.UserName">Username:</label>
                            </div>
                            <div>
                                <input asp-for="User.UserName" class="form-control" />
                            </div>
                            <span asp-validation-for="User.UserName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="d-md-flex justify-content-center align-items-center">
                            <div style="min-width: 8.5rem">
                                <label asp-for="User.Password">Password:</label>
                            </div>
                            <div>
                                <input type="password" asp-for="User.Password" class="form-control" />
                            </div>
                            <span asp-validation-for="User.Password" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="d-md-flex justify-content-center align-items-center">
                            <div style="min-width: 8.5rem">
                                <label>Repeat Password:</label>
                            </div>
                            <div>
                                <input type="password" name="ValidationPassword" class="form-control" />
                            </div>
                            <span asp-validation-for="User.Password" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="d-md-flex justify-content-center align-items-center">
                            <div style="min-width: 8.5rem">
                                <label asp-for="User.BirthDate">Birth date:</label>
                            </div>
                            <div>
                                <input asp-for="User.BirthDate" class="form-control"/>
                            </div>
                            <span asp-validation-for="User.BirthDate" class="text-danger"></span>
                        </div>
                    </div>

                    <br />

                    <div class="form-group">
                        <div class="d-md-flex justify-content-between align-items-center" style="margin: 0rem 4.5rem 0rem 4.5rem">
                            <div>
                                <input type="submit" value="Save" class="btn btn-success form-control" style="width: 7.5rem"/>
                            </div>
                            <div>
                                <a asp-page="/AuthRPC/SignIn" class="btn btn-danger form-control" style="width: 7.5rem">Cancel</a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>
