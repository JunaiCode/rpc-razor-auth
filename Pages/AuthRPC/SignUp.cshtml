@page
@model rpc_razor_auth.Pages.AuthRPC.SignUpModel
@{
    ViewData["Title"] = "Sign Up";
}
<br />
<body>
    <div class="container flex-column justify-content-center align-items-center">
        <h1 align="center" class="text-info">Sign Up</h1>
        <div class="border">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="container" style="padding: 30px">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2">
                                <label asp-for="User.FirstName"></label>
                            </div>
                            <div class="col-sm-4">
                                <input asp-for="User.FirstName" class="form-control" />
                            </div>
                            <span asp-validation-for="User.FirstName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2">
                                <label asp-for="User.LastName"></label>
                            </div>
                            <div class="col-sm-4">
                                <input asp-for="User.LastName" class="form-control" />
                            </div>
                            <span asp-validation-for="User.LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2">
                                <label asp-for="User.UserName"></label>
                            </div>
                            <div class="col-sm-4">
                                <input asp-for="User.UserName" class="form-control" />
                            </div>
                            <span asp-validation-for="User.UserName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2">
                                <label asp-for="User.Password"></label>
                            </div>
                            <div class="col-sm-4">
                                <input type="password" asp-for="User.Password" class="form-control" />
                            </div>
                            <span asp-validation-for="User.Password" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2">
                                <label>Repeat Password</label>
                            </div>
                            <div class="col-sm-4">
                                <input type="password" name="ValidationPassword" value= 0 property="ValidationPassword" class="form-control"  />
                            </div>
                            <span asp-validation-for="User.Password"class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2">
                                <label asp-for="User.BirthDate"></label>
                            </div>
                            <div class="col-sm-4">
                                <input asp-for="User.BirthDate" class="form-control" />
                            </div>
                            <span asp-validation-for="User.BirthDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2 offset-sm-2">
                                <input type="submit" value="Save"  class="btn btn-primary form-control" />
                            </div>
                            <div class="col-sm-2">
                                <a asp-page="SignIn" class="btn btn-success form-control">Cancel</a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>
